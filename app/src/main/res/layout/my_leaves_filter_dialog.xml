<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#33000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#33000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="6sp"
                android:layout_weight="2"
                android:background="@drawable/card_style"
                android:elevation="2sp"
                android:orientation="vertical"
                android:padding="4sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:gravity="center_vertical"
                    android:padding="4sp"
                    android:text="Status"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/status_spn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginTop="6sp"
                android:layout_weight="2"
                android:background="@drawable/card_style"
                android:elevation="2sp"
                android:orientation="vertical"
                android:padding="4sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6sp"
                    android:gravity="center_vertical"
                    android:padding="4sp"
                    android:text="Leave Type"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/leaveType_spn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/from_date_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_style"
                    android:elevation="2sp"
                    android:orientation="vertical"
                    android:padding="4sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:padding="4sp"
                        android:text="FROM"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/from_date_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:drawableRight="@android:drawable/ic_menu_my_calendar"
                        android:drawableTint="@color/error_text_color"
                        android:gravity="center_vertical"
                        android:hint="select date"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/to_date_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_style"
                    android:elevation="2sp"
                    android:orientation="vertical"
                    android:padding="4sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:padding="4sp"
                        android:text="TO"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/to_date_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:drawableRight="@android:drawable/ic_menu_my_calendar"
                        android:drawableTint="@color/error_text_color"
                        android:gravity="center_vertical"
                        android:hint="select date"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"

                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_apply"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/button_shape"
            android:fontFamily="@string/font1"

            android:text="@string/lbl_apply_search"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_text_size" />

    </LinearLayout>


</LinearLayout>